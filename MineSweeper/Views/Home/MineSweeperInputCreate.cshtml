@model MineSweeper.Models.MineSweeperDTO

@{
    ViewData["Title"] = "Mine Sweeper Input Create";
}

<h1>Mine Sweeper Input Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MineSweeperInputCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input" class="control-label"></label>
                <textarea asp-for="Input" class="form-control"></textarea>
                <span asp-validation-for="Input" class="text-danger"></span>
                <span asp-validation-for="Input" class="text-info"></span>
            </div>
            <div class="form-group">
                    <button class="btn btn-primary" id="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#submit').on('click', function (evt) {
                evt.preventDefault();
                var input = $("#Input").val();
                createMineSweeperInput(input);
            });
        });
</script>
}
